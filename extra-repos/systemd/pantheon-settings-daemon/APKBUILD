# Forked from Alpine to add systemd!

pkgname=pantheon-settings-daemon
pkgver=8.1.0
pkgrel=0
pkgdesc="Pantheon settings daemon"
url="https://github.com/elementary/settings-daemon"
arch="all !s390x" # no libei-dev for s390x
license="GPL-2.0-or-later"
depends="
	gala
	"
makedepends="
	gala-dev
	libgee-dev
	glib-dev
	granite-dev
	meson
	mutter46-dev
	vala
	"
# TODO: crossdirect disabled due to armv7 crosscompile failure on x86_64, see
# https://gitlab.com/postmarketOS/pmaports/-/merge_requests/5115#note_1899890119
options="!check !pmb:crossdirect" # Can't be run with release builds
source="$pkgname-$pkgver.tar.gz::https://github.com/elementary/settings-daemon/archive/refs/tags/$pkgver.tar.gz
	fwupd-2.0-compat.patch
"
builddir="$srcdir/settings-daemon-$pkgver"

build() {
	abuild-meson \
		--prefix=/usr \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
