# Forked from Alpine to add systemd!

pkgname=pantheon-files
pkgver=7.1.0
pkgrel=0
pkgdesc="ElementaryOS files application"
url="https://github.com/elementary/files"
arch="all !s390x" # no libei-dev for s390x
license="GPL-2.0-or-later"
depends="
	gala
	"
makedepends="
	libcanberra-dev
	libcloudproviders-dev
	libgit2-glib-dev
	gtk+3.0-dev
	libhandy1-dev
	libgee-dev
	glib-dev
	granite-dev
	meson
	libportal-dev
	libportal-gtk3
	pango-dev
	sqlite-dev
	vala
	"
# TODO: crossdirect disabled due to armv7 crosscompile failure on x86_64, see
# https://gitlab.com/postmarketOS/pmaports/-/merge_requests/5115#note_1899890119
options="!check !pmb:crossdirect" # Can't be run with release builds
source="$pkgname-$pkgver.tar.gz::https://github.com/elementary/files/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/files-$pkgver"

build() {
	abuild-meson \
		--prefix=/usr \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
f86e3911e8453e223e8f802cbef5dd3b7f67c710412e7bb22b920443a4d73de414fbd7a52c91038f8d8e99c364ee34e210833765f33238594372d1b19a2c3932  pantheon-files-7.1.0.tar.gz
"
