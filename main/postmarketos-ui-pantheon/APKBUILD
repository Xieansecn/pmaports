pkgname=postmarketos-ui-pantheon
pkgver=1
pkgrel=0
pkgdesc="(Wayland) pantheon Shell"
url="https://gnome.org/"
# armhf blocked by gnome-shell -> gjs -> mozjs102
arch="noarch !armhf"
license="GPL-3.0-or-later"
depends="
	!gnome-shell-mobile
	!gnome-shell-mobile-schemas
	!mutter-mobile
	!mutter-mobile-schemas
	!gnome-shell
	lightdm
	pantheon-session
	postmarketos-base-ui-gnome
	"
_pmb_recommends="
	gnome-calendar
	gnome-disk-utility
	gnome-system-monitor
	snapshot
	pantheon-files
	switchboard
	switchboard-plugs
	wingpanel-indicators
	"
source="firefox-wayland.sh"
options="!check pmb:systemd"

package() {
	install -Dm755 \
		"$srcdir"/firefox-wayland.sh \
		-t "$pkgdir"/etc/profile.d/
}

